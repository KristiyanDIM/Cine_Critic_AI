@model Cine_Critic_AI.Models.LoginViewModel

@{
    ViewData["Title"] = "Вход";
}

<h2 class="text-center mt-4">Вход в системата</h2>

<div class="row justify-content-center mt-4">
    <div class="col-md-4">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Имейл" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Парола" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Вход</button>

            <p class="text-center mt-3">
                Нямате акаунт? <a asp-controller="Account" asp-action="Register">Регистрирайте се</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
