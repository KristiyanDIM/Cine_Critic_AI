@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CineCritic_AI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/customCSS.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
    <div class="main-head">
        <nav class="head-nav">
            <div class="nav-links">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-house"></i><span class="link-text">Home</span>
                </a>
                <a class="nav-link" asp-controller="Movies" asp-action="Index">
                    <i class="fa-solid fa-film"></i><span class="link-text">Movies</span>
                </a>
                <a class="nav-link" asp-controller="Reviews" asp-action="Index">
                    <i class="fa-solid fa-pen-to-square"></i><span class="link-text">Reviews</span>
                </a>
                <a asp-controller="Statistics" asp-action="Index" class="nav-link">
                    <i class="bi bi-graph-up-arrow"></i>
                    <span class="link-text">Статистика</span>
                </a>
                <a asp-controller="ChatBot" asp-action="Index" class="nav-link">
                    <i class="bi bi-robot"></i>
                    <span class="link-text">AI Чат бот</span>
                </a>

                @if (User?.Identity == null || !User.Identity.IsAuthenticated)
                {
                    <a class="nav-link" asp-controller="Account" asp-action="Login">
                        <i class="fa-solid fa-right-to-bracket"></i><span class="link-text">Login</span>
                    </a>
                    <a class="nav-link" asp-controller="Account" asp-action="Register">
                        <i class="fa-solid fa-user-plus"></i><span class="link-text">Register</span>
                    </a>
                }
            </div>
            @if (User?.Identity != null && User.Identity.IsAuthenticated)
            {
                <div class="user-footer">
                    <a class="user-link" asp-controller="Account" asp-action="EditProfile">
                        <i class="fa-solid fa-user"></i>
                        <span class="user-name">@User.Identity.Name</span>
                    </a>
                    <a class="logout-link" asp-controller="Account" asp-action="Logout">
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <span class="link-text">Logout</span>
                    </a>
                </div>
            }
        </nav>
    </div>

    <main>
        @RenderBody()
    </main>

    <!-- Floating Chatbot Button -->
    <div id="chatbot-button">
        <i class="bi bi-robot"></i>
    </div>

    <!-- Chat Window -->
    <div id="chatbot-window" class="hidden">
        <div class="chat-header">
            🤖 AI Чат Бот
            <button id="chatbot-close" class="btn-close"></button>
        </div>
        <div class="chat-body" id="chat-messages">
            <div class="bot-message">Здравей! Как мога да ти помогна днес?</div>
        </div>
        <div class="chat-input-area">
            <input type="text" id="chat-input" placeholder="Напиши съобщение..." />
            <button id="chat-send"><i class="bi bi-send"></i></button>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const chatBtn = document.getElementById("chatbot-button");
            const chatWindow = document.getElementById("chatbot-window");
            const chatClose = document.getElementById("chatbot-close");
            const chatSend = document.getElementById("chat-send");
            const chatInput = document.getElementById("chat-input");
            const chatMessages = document.getElementById("chat-messages");

            const userId = @((HttpContextAccessor.HttpContext.Session.GetInt32("UserId") ?? 0));

                    function sendMessage() {
            const msg = chatInput.value.trim();
            if (!msg) return;

            // Добавяме съобщението на потребителя
            chatMessages.innerHTML += `<div class="user-message">${msg}</div>`;
            chatInput.value = "";
            chatMessages.scrollTop = chatMessages.scrollHeight;

            // 👉 Добавяме loader (анимация "мисли...")
            const loaderDiv = document.createElement("div");
            loaderDiv.className = "bot-message";
            loaderDiv.innerHTML = `
                <div class="loader-container">
                    <div class="loader-dot"></div>
                </div>
            `;
            chatMessages.appendChild(loaderDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;

            // Изпращаме заявката към контролера
            fetch('@Url.Action("SendMessage", "ChatBot")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `userMessage=${encodeURIComponent(msg)}&userId=${userId}`
            })
            .then(res => res.json())
            .then(data => {
                // Махаме loader-а
                loaderDiv.remove();

                // Показваме отговора
                chatMessages.innerHTML += `<div class="bot-message">${data.response}</div>`;
                chatMessages.scrollTop = chatMessages.scrollHeight;
            })
            .catch(err => {
                loaderDiv.remove();
                chatMessages.innerHTML += `<div class="bot-message text-danger">⚠️ Грешка: ${err}</div>`;
                chatMessages.scrollTop = chatMessages.scrollHeight;
            });
        }


            chatBtn.addEventListener("click", () => chatWindow.classList.toggle("hidden"));
            chatClose.addEventListener("click", () => chatWindow.classList.add("hidden"));
            chatSend.addEventListener("click", sendMessage);
            chatInput.addEventListener("keypress", e => { if (e.key === "Enter") sendMessage(); });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
