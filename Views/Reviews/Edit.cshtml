@model Cine_Critic_AI.Models.Review

@{
    ViewData["Title"] = "Редактирай ревю";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Rate" class="form-label"></label>
        <input asp-for="Rate" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Comment" class="form-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
    </div>

    <div class="form-group mb-3">
        <label asp-for="EmotionTone" class="form-label"></label>
        <input asp-for="EmotionTone" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">💾 Запази промените</button>
    <a asp-action="Index" class="btn btn-secondary">⬅️ Назад</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
