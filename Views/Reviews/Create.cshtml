@model Cine_Critic_AI.Models.Review

@{
    ViewData["Title"] = "Добави ново ревю";
}

<div class="container mt-5">
    <div class="review-form-card mx-auto p-4 shadow-sm rounded-3">
        <h2 class="text-center text-primary mb-4 fw-bold">📝 @ViewData["Title"]</h2>

        <form asp-action="Create" method="post" class="review-form">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="MovieId" class="form-label fw-semibold">Филм</label>
                <select asp-for="MovieId" class="form-control" asp-items="ViewBag.Movies">
                    <option value="">-- Изберете филм --</option>
                </select>
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Rate" class="form-label fw-semibold"></label>
                <input asp-for="Rate" class="form-control" placeholder="Оценка (1-5)" id="rateInput" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Comment" class="form-label fw-semibold"></label>
                <textarea asp-for="Comment" class="form-control" placeholder="Напишете коментар" id="commentInput" rows="4"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EmotionTone" class="form-label fw-semibold"></label>
                <input asp-for="EmotionTone" class="form-control" placeholder="Емоционален тон" id="toneInput" readonly />
                <span asp-validation-for="EmotionTone" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Date" class="form-label fw-semibold"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="d-flex flex-column flex-sm-row gap-2 justify-content-center">
                <button type="submit" class="btn btn-success flex-fill">💾 Запази</button>
                <button type="button" id="aiButton" class="btn btn-secondary flex-fill">🤖 Генерирай с AI</button>
                <a asp-action="Index" class="btn btn-outline-secondary flex-fill">⬅️ Назад</a>
            </div>
        </form>
    </div>
</div>

<style>
    .review-form-card {
        max-width: 600px;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .review-form-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(0,0,0,0.15);
        }

    .review-form label {
        color: #333;
        font-size: 0.95rem;
    }

    .review-form input,
    .review-form textarea,
    .review-form select {
        border-radius: 8px;
        transition: all 0.2s ease;
    }

        .review-form input:focus,
        .review-form textarea:focus,
        .review-form select:focus {
            border-color: #4a90e2;
            box-shadow: 0 0 5px rgba(74,144,226,0.4);
        }

    .btn-success {
        background-color: #4a90e2;
        border: none;
        color: #fff;
        font-weight: 600;
        transition: all 0.2s ease;
    }

        .btn-success:hover {
            background-color: #357ab8;
            transform: scale(1.03);
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: #fff;
        font-weight: 600;
        transition: all 0.2s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: scale(1.03);
        }

    .btn-outline-secondary {
        border-radius: 8px;
        border-width: 2px;
        transition: all 0.2s ease;
    }

        .btn-outline-secondary:hover {
            background-color: #e2e6ea;
            transform: scale(1.03);
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("aiButton").addEventListener("click", async function () {
            const rate = document.getElementById("rateInput").value;
            if (!rate) { alert("Моля, въведи оценка."); return; }

            const description = `Филм с оценка ${rate}`;

            try {
                const response = await fetch('/Reviews/Generate', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `description=${encodeURIComponent(description)}`
                });

                if (response.ok) {
                    const data = await response.json();
                    document.getElementById("commentInput").value = data.comment;
                    document.getElementById("toneInput").value = data.emotion;
                    document.getElementById("rateInput").value = data.rate;
                } else {
                    alert("Грешка при свързване с AI.");
                }
            } catch (error) {
                alert("Възникна грешка: " + error);
            }
        });
    </script>
}
