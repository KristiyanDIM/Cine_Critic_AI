@model Cine_Critic_AI.Models.Review

@{
    ViewData["Title"] = "Добави ново ревю";
}

<div class="container mt-5">
    <div class="review-form-card mx-auto p-4 shadow-sm rounded-3">
        <h2 class="text-center text-primary mb-4 fw-bold">📝 @ViewData["Title"]</h2>

        <form asp-action="Create" method="post" class="review-form">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="MovieId" class="form-label fw-semibold">Филм</label>
                <select asp-for="MovieId" class="form-control" asp-items="ViewBag.Movies">
                    <option value="">-- Изберете филм --</option>
                </select>
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Rate" class="form-label fw-semibold"></label>
                <input asp-for="Rate" class="form-control" placeholder="Оценка (1-5)" id="rateInput" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Comment" class="form-label fw-semibold"></label>
                <textarea asp-for="Comment" class="form-control" placeholder="Напишете коментар" id="commentInput" rows="4"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EmotionTone" class="form-label fw-semibold"></label>
                <input asp-for="EmotionTone" class="form-control" placeholder="Емоционален тон" id="toneInput" readonly />
                <span asp-validation-for="EmotionTone" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Date" class="form-label fw-semibold"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="d-flex flex-column flex-sm-row gap-2 justify-content-center">
                <button type="submit" class="btn btn-success flex-fill">💾 Запази</button>
                <button type="button" id="aiButton" class="btn btn-secondary flex-fill">🤖 Генерирай с AI</button>
                <a asp-action="Index" class="btn btn-outline-secondary flex-fill">⬅️ Назад</a>
            </div>
        </form>
    </div>
</div>

<style>
    .review-form-card {
        max-width: 600px;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .review-form-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(0,0,0,0.15);
        }

    .review-form label {
        color: #333;
        font-size: 0.95rem;
    }

    .review-form input,
    .review-form textarea,
    .review-form select {
        border-radius: 8px;
        transition: all 0.2s ease;
    }

        .review-form input:focus,
        .review-form textarea:focus,
        .review-form select:focus {
            border-color: #4a90e2;
            box-shadow: 0 0 5px rgba(74,144,226,0.4);
        }

    .btn-success {
        background-color: #4a90e2;
        border: none;
        color: #fff;
        font-weight: 600;
        transition: all 0.2s ease;
    }

        .btn-success:hover {
            background-color: #357ab8;
            transform: scale(1.03);
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: #fff;
        font-weight: 600;
        transition: all 0.2s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: scale(1.03);
        }

    .btn-outline-secondary {
        border-radius: 8px;
        border-width: 2px;
        transition: all 0.2s ease;
    }

        .btn-outline-secondary:hover {
            background-color: #e2e6ea;
            transform: scale(1.03);
        }


    /* 🌀 AI Loader стил — твоята версия */
    #aiLoader {
        text-align: center;
        margin-top: 15px;
    }

    .dot-loader {
        --uib-size: 40px;
        --uib-color: #4a90e2;
        --uib-speed: 1.5s;
        --dot-size: calc(var(--uib-size) * 0.17);
        position: relative;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        height: var(--uib-size);
        width: var(--uib-size);
        margin: 0 auto;
        animation: smoothRotate calc(var(--uib-speed) * 1.8) linear infinite;
    }

    .dot {
        position: absolute;
        top: 0;
        left: 0;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        height: 100%;
        width: 100%;
        animation: rotate var(--uib-speed) ease-in-out infinite;
    }

        .dot::before {
            content: '';
            height: var(--dot-size);
            width: var(--dot-size);
            border-radius: 50%;
            background-color: var(--uib-color);
            transition: background-color 0.3s ease;
        }

        .dot:nth-child(2),
        .dot:nth-child(2)::before {
            animation-delay: calc(var(--uib-speed) * -0.835 * 0.5);
        }

        .dot:nth-child(3),
        .dot:nth-child(3)::before {
            animation-delay: calc(var(--uib-speed) * -0.668 * 0.5);
        }

        .dot:nth-child(4),
        .dot:nth-child(4)::before {
            animation-delay: calc(var(--uib-speed) * -0.501 * 0.5);
        }

        .dot:nth-child(5),
        .dot:nth-child(5)::before {
            animation-delay: calc(var(--uib-speed) * -0.334 * 0.5);
        }

        .dot:nth-child(6),
        .dot:nth-child(6)::before {
            animation-delay: calc(var(--uib-speed) * -0.167 * 0.5);
        }

    @@keyframes rotate {
        0%

    {
        transform: rotate(0deg);
    }

    65%, 100% {
        transform: rotate(360deg);
    }

    }

    @@keyframes smoothRotate {
        0%

    {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }

    }

    .thinking-text {
        font-size: 0.9rem;
        color: #666;
        margin-top: 10px;
        font-style: italic;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
            const aiButton = document.getElementById("aiButton");
        const rateInput = document.getElementById("rateInput");
        const commentInput = document.getElementById("commentInput");
        const toneInput = document.getElementById("toneInput");

        // ⚙️ Създаваме контейнера с твоята анимация
        const loader = document.createElement("div");
        loader.id = "aiLoader";
        loader.innerHTML = `
            <div class="dot-loader">
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
            </div>
            <p class="thinking-text">AI мисли...</p>
        `;
        loader.style.display = "none";
        document.querySelector(".review-form-card").appendChild(loader);

        aiButton.addEventListener("click", async function () {
            const rate = rateInput.value;
            if (!rate) {
                alert("Моля, въведи оценка.");
                return;
            }

            const description = `Филм с оценка ${rate}`;

            // ⏳ Показваме анимацията
            loader.style.display = "block";
            aiButton.disabled = true;
            aiButton.innerText = "🤔 Генерирам...";

            try {
                const response = await fetch('/Reviews/Generate', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `description=${encodeURIComponent(description)}`
                });

                if (response.ok) {
                    const data = await response.json();
                    commentInput.value = data.comment;
                    toneInput.value = data.emotion;
                    rateInput.value = data.rate;
                } else {
                    alert("⚠️ Грешка при свързване с AI.");
                }
            } catch (error) {
                alert("❌ Възникна грешка: " + error);
            } finally {
                // ✅ Скриваме анимацията
                loader.style.display = "none";
                aiButton.disabled = false;
                aiButton.innerText = "🤖 Генерирай с AI";
            }
        });
    </script>
}
