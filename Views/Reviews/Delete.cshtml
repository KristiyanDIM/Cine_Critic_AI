@model Cine_Critic_AI.Models.Review

@{
    ViewData["Title"] = "Изтриване на ревю";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="delete-review-card p-4 shadow rounded-4">
        <div class="text-center mb-4">
            <span class="delete-icon">🛑</span>
            <h2 class="fw-bold text-danger mt-2">@ViewData["Title"]</h2>
            <p class="text-muted">Сигурни ли сте, че искате да изтриете това ревю?</p>
        </div>

        <div class="review-details mb-4">
            <dl class="row">
                <dt class="col-sm-5 fw-semibold text-end">Оценка:</dt>
                <dd class="col-sm-7">@Model.Rate</dd>

                <dt class="col-sm-5 fw-semibold text-end">Коментар:</dt>
                <dd class="col-sm-7">@Model.Comment</dd>

                <dt class="col-sm-5 fw-semibold text-end">Емоционален тон:</dt>
                <dd class="col-sm-7">@Model.EmotionTone</dd>

                <dt class="col-sm-5 fw-semibold text-end">Дата:</dt>
                <dd class="col-sm-7">@Model.Date.ToString("dd.MM.yyyy")</dd>
            </dl>
        </div>

        <div class="d-flex justify-content-center gap-3">
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg fw-bold">🗑️ Изтрий</button>
            </form>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg fw-bold">⬅️ Отказ</a>
        </div>
    </div>
</div>

<style>
    .delete-review-card {
        max-width: 800px;
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .delete-review-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }

    .delete-icon {
        font-size: 3rem;
    }

    .review-details dt {
        color: #555;
    }

    .review-details dd {
        color: #333;
    }

    .btn-danger {
        background-color: #e74c3c;
        border: none;
        color: #fff;
        transition: all 0.2s ease;
    }

        .btn-danger:hover {
            background-color: #c0392b;
            transform: scale(1.05);
        }

    .btn-outline-secondary {
        border-color: #95a5a6;
        color: #95a5a6;
        transition: all 0.2s ease;
    }

        .btn-outline-secondary:hover {
            background-color: #ecf0f1;
            color: #2c3e50;
            transform: scale(1.05);
        }
</style>
