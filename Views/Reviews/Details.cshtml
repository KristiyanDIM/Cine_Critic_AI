@model Cine_Critic_AI.Models.Review

@{
    ViewData["Title"] = "Детайли за ревю";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="review-details-card p-4 shadow rounded-4">
        <div class="text-center mb-4">
            <span class="review-icon">📝</span>
            <h2 class="fw-bold mt-2">@ViewData["Title"]</h2>
        </div>

        <div class="review-info mb-4">
            <p><strong>Оценка:</strong> ⭐ @Model.Rate / 5</p>
            <p><strong>Коментар:</strong> @Model.Comment</p>
            <p><strong>Емоционален тон:</strong> @Model.EmotionTone"</p>
            <p><strong>Дата:</strong> @Model.Date.ToString("dd.MM.yyyy")</p>
        </div>

        <div class="d-flex justify-content-center gap-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg fw-bold">✏️ Редактирай</a>
            <a asp-action="Index" class="btn btn-secondary btn-lg fw-bold">⬅️ Назад</a>
        </div>
    </div>
</div>

<style>
    .review-details-card {
        max-width: 700px;
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .review-details-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }

    .review-icon {
        font-size: 3rem;
    }

    .review-info p {
        font-size: 1rem;
        color: #333;
        margin-bottom: 10px;
    }

    .btn-warning {
        background-color: #f5a623;
        border: none;
        color: #fff;
        transition: all 0.2s ease;
    }

        .btn-warning:hover {
            background-color: #d1871f;
            transform: scale(1.05);
        }

    .btn-secondary {
        border-color: #95a5a6;
        color: #95a5a6;
        transition: all 0.2s ease;
    }

        .btn-secondary:hover {
            background-color: #ecf0f1;
            color: #2c3e50;
            transform: scale(1.05);
        }
</style>
