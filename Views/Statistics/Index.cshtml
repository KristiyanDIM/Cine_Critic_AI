@model Cine_Critic_AI.Models.StatisticsViewModel

@{
    ViewData["Title"] = "Статистика";
}

<div class="stats-container mt-5">
    <h2 class="page-title">📊 Статистика на сайта</h2>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon bg-primary">
                <i class="bi bi-film"></i>
            </div>
            <div class="stat-info">
                <h5>Филми</h5>
                <p>@Model.TotalMovies</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon bg-success">
                <i class="bi bi-chat-left-text"></i>
            </div>
            <div class="stat-info">
                <h5>Ревюта</h5>
                <p>@Model.TotalReviews</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon bg-warning text-dark">
                <i class="bi bi-star-fill"></i>
            </div>
            <div class="stat-info">
                <h5>Среден рейтинг</h5>
                <p>@Model.AverageRating.ToString("0.0")</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon bg-danger">
                <i class="bi bi-trophy-fill"></i>
            </div>
            <div class="stat-info">
                <h5>Най-популярен филм</h5>
                <p>@Model.TopMovie</p>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a class="btn btn-outline-primary px-4 py-2" href="/Home/Index">
            <i class="bi bi-arrow-left-circle"></i> Обратно към началото
        </a>
    </div>
</div>