@model Cine_Critic_AI.Models.Movie

@{
    ViewData["Title"] = "Детайли за филм";
}

<h2>@ViewData["Title"]</h2>

<div class="card mt-3 shadow-sm">
    <div class="card-body">
        <h4>@Model.Title (@Model.Year)</h4>
        <p><strong>Жанр:</strong> @Model.Genre</p>
        <p><strong>Режисьор:</strong> @Model.Director</p>
        <p><strong>Описание:</strong> @Model.Description</p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">✏️ Редактирай</a>
    <a asp-action="Index" class="btn btn-secondary">⬅️ Назад</a>
</div>
