@model Cine_Critic_AI.Models.Movie

@{
    ViewData["Title"] = "Детайли за филм";
}

<div class="container mt-5">
    <div class="movie-details-card mx-auto p-4">
        <h2 class="text-center mb-4 text-primary fw-bold">🎬 @Model.Title (@Model.Year)</h2>

        <div class="row align-items-center">
            <!-- Лява част: изображение -->
            <div class="col-md-4 text-center mb-3 mb-md-0">
                <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "/images/default_poster.jpg")"
                     alt="@Model.Title"
                     class="movie-details-poster shadow-sm" />
            </div>

            <!-- Дясна част: информация -->
            <div class="col-md-8">
                <div class="movie-details-info">
                    <p><strong>🎭 Жанр:</strong> <span>@Model.Genre</span></p>
                    <p><strong>🎬 Режисьор:</strong> <span>@Model.Director</span></p>
                    <p><strong>📝 Описание:</strong></p>
                    <p class="movie-details-description">
                        @(!string.IsNullOrEmpty(Model.Description) ? Model.Description : "Няма въведено описание за този филм.")
                    </p>
                </div>

                <div class="mt-4 d-flex gap-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit flex-grow-1">✏️ Редактирай</a>
                    <a asp-action="Index" class="btn btn-back flex-grow-1">⬅️ Назад</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .movie-details-card {
        max-width: 850px;
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .movie-details-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

    .movie-details-poster {
        width: 100%;
        max-width: 240px;
        height: 340px;
        border-radius: 12px;
        object-fit: cover;
        border: 3px solid #f1f1f1;
    }

    .movie-details-info p {
        font-size: 1.05rem;
        margin-bottom: 10px;
        color: #444;
    }

    .movie-details-info strong {
        color: #000;
    }

    .movie-details-description {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 12px;
        font-style: italic;
        font-size: 0.95rem;
        color: #555;
    }

    /* Бутони */
    .btn-edit {
        background-color: #f5a623;
        color: white;
        border: none;
        font-weight: 600;
        transition: all 0.2s ease;
    }

        .btn-edit:hover {
            background-color: #d1871f;
            transform: scale(1.03);
        }

    .btn-back {
        background-color: #6c757d;
        color: white;
        border: none;
        font-weight: 600;
        transition: all 0.2s ease;
    }

        .btn-back:hover {
            background-color: #5a6268;
            transform: scale(1.03);
        }

    h2 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 700;
    }
</style>
