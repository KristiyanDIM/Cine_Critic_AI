@model Cine_Critic_AI.Models.Movie

@{
    ViewData["Title"] = "Изтриване на филм";
}

<div class="container mt-5">
    <div class="delete-card mx-auto p-4 text-center">
        <h2 class="text-danger mb-3">🗑️ Изтриване на филм</h2>
        <p class="lead">
            Сигурни ли сте, че искате да изтриете <br />
            <strong class="text-dark fs-4">"@Model.Title"</strong>?
        </p>

        <div class="movie-info my-4">
            <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "/images/default_poster.jpg")"
                 alt="@Model.Title"
                 class="movie-poster mb-3" />

            <ul class="list-unstyled text-start d-inline-block text-muted">
                <li><strong>📅 Година:</strong> @Model.Year</li>
                <li><strong>🎭 Жанр:</strong> @Model.Genre</li>
                <li><strong>🎬 Режисьор:</strong> @Model.Director</li>
            </ul>
        </div>

        <form asp-action="DeleteConfirmed" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-danger btn-lg px-4">
                    🗑️ Изтрий
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    ⬅️ Отказ
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .delete-card {
        max-width: 550px;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }

        .delete-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(0,0,0,0.15);
        }

    .movie-info {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 20px;
        box-shadow: inset 0 0 10px rgba(0,0,0,0.05);
    }

    .movie-poster {
        width: 120px;
        height: 180px;
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    }

    ul li {
        margin-bottom: 6px;
        font-size: 1rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        font-weight: 600;
        transition: all 0.2s ease;
    }

        .btn-danger:hover {
            background-color: #b02a37;
            transform: scale(1.03);
        }

    .btn-outline-secondary:hover {
        background-color: #e9ecef;
        transform: scale(1.03);
    }

    h2 {
        font-weight: 700;
    }
</style>
