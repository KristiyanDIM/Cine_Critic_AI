@model Cine_Critic_AI.Models.HomePageViewModel

<div class="container mt-5">
    <!-- 🎬 Случайни филми -->
    <h2 class="mb-4 text-center text-primary fw-bold">🎬 Препоръчани филми</h2>
    <div class="row g-3 justify-content-center">
        @foreach (var movie in Model.RandomMovies)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="movie-card">
                    <div class="movie-image">
                        <img src="@(!string.IsNullOrEmpty(movie.ImageUrl) ? movie.ImageUrl : "/images/default_poster.jpg")" alt="@movie.Title" />
                    </div>
                    <div class="movie-content">
                        <h5>@movie.Title</h5>
                        <p><strong>Година:</strong> @movie.Year</p>
                        <p><strong>Жанр:</strong> @movie.Genre</p>
                    </div>
                    <div class="movie-actions">
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-outline-primary btn-sm">Виж повече</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <hr class="my-5" />

    <!-- 📝 Последни ревюта -->
    <h2 class="mb-4 text-center text-success fw-bold">📝 Последни ревюта</h2>
    <div class="row g-3 justify-content-center">
        @foreach (var review in Model.RandomReviews)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="movie-card">
                    <div class="movie-content">
                        <h5>@review.Movie?.Title</h5>
                        <p class="text-muted small">
                            @(review.Comment != null && review.Comment.Length > 100
                                                    ? review.Comment.Substring(0, 100) + "..."
                                                    : review.Comment)
                    </p>
                    <p><strong>Емоция:</strong> @review.EmotionTone</p>
                    <span class="badge bg-warning text-dark">⭐ @review.Rate / 5</span>
                </div>
                <div class="movie-actions">
                    <a asp-controller="Reviews" asp-action="Details" asp-route-id="@review.Id" class="btn btn-outline-secondary btn-sm">Прегледай</a>
                </div>
            </div>
        </div>
                }
    </div>

    <hr class="my-5" />

    <!-- 📊 Статистика -->
    <h2 class="text-center text-info fw-bold mb-4">📊 Статистика</h2>
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="movie-card text-center p-3">
                <div class="movie-content">
                    <ul class="list-group list-group-flush text-start">
                        <li class="list-group-item">🎞️ Общо филми: <strong>@Model.Statistics.TotalMovies</strong></li>
                        <li class="list-group-item">📝 Общо ревюта: <strong>@Model.Statistics.TotalReviews</strong></li>
                        <li class="list-group-item">⭐ Среден рейтинг: <strong>@Model.Statistics.AverageRating.ToString("0.0")</strong></li>
                        <li class="list-group-item">🏆 Най-популярен филм: <strong>@Model.Statistics.TopMovie</strong></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

