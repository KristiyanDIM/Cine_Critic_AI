@model Cine_Critic_AI.Models.HomePageViewModel

<div class="container mt-5">
    <!-- 🎬 Случайни филми -->
    <h2 class="mb-4 text-center text-primary fw-bold">🎬 Препоръчани филми</h2>
    <div class="row g-3 justify-content-center">
        @foreach (var movie in Model.RandomMovies)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="movie-card">
                    <div class="movie-image">
                        <img src="@(!string.IsNullOrEmpty(movie.ImageUrl) ? movie.ImageUrl : "/images/default_poster.jpg")" alt="@movie.Title" />
                    </div>
                    <div class="movie-content">
                        <h5>@movie.Title</h5>
                        <p><strong>Година:</strong> @movie.Year</p>
                        <p><strong>Жанр:</strong> @movie.Genre</p>
                    </div>
                    <div class="movie-actions">
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-outline-primary btn-sm">Виж повече</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <hr class="my-5" />

    <!-- 📝 Последни ревюта -->
    <h2 class="mb-4 text-center text-success fw-bold">📝 Последни ревюта</h2>
    <div class="row g-3 justify-content-center">
        @foreach (var review in Model.RandomReviews)
        {
            <div class="review-card-new">
                <!-- Лява част: мини постер на филма -->
                <div class="review-card-image">
                    <img src="@(!string.IsNullOrEmpty(review.Movie?.ImageUrl) ? review.Movie.ImageUrl : "/images/default_poster.jpg")"
                         alt="@review.Movie?.Title" />
                </div>

                <!-- Дясна част: информация -->
                <div class="review-card-content">
                    <h4 class="review-card-title">@review.Movie?.Title</h4>
                    <div class="review-card-meta">
                        <span class="review-card-rating">⭐ @review.Rate/5</span>
                        <span class="review-card-emotion">@review.EmotionTone"</span>
                    </div>
                    <p class="review-card-comment">@(!string.IsNullOrEmpty(review.Comment) ? review.Comment : "Няма коментар")</p>

                    <div class="review-card-buttons">
                        <a asp-controller="Reviews" asp-action="Details" asp-route-id="@review.Id" class="btn btn-sm btn-primary">
                            Детайли
                        </a>
                        <a asp-controller="Reviews" asp-action="Edit" asp-route-id="@review.Id" class="btn btn-sm btn-warning">
                            Редактирай
                        </a>
                        <a asp-controller="Reviews" asp-action="Delete" asp-route-id="@review.Id" class="btn btn-sm btn-danger">
                            Изтрий
                        </a>
                    </div>

                </div>
            </div>

                
        }
    </div>

    <hr class="my-5" />

    <!-- 📊 Статистика -->
    <div class="container my-5">
        <div class="text-center mb-4">
            <h3 class="fw-bold">📊 Статистика на сайта</h3>
        </div>

        <div class="d-flex justify-content-center">
            <div class="stats-card-home text-center p-4">
                <div class="stats-items">
                    <div class="stat-item">
                        <i class="bi bi-film text-primary"></i>
                        <span>Общо филми:</span>
                        <strong>@Model.Statistics.TotalMovies</strong>
                    </div>
                    <div class="stat-item">
                        <i class="bi bi-chat-left-text text-success"></i>
                        <span>Общо ревюта:</span>
                        <strong>@Model.Statistics.TotalReviews</strong>
                    </div>
                    <div class="stat-item">
                        <i class="bi bi-star-fill text-warning"></i>
                        <span>Среден рейтинг:</span>
                        <strong>@Model.Statistics.AverageRating.ToString("0.0")</strong>
                    </div>
                    <div class="stat-item">
                        <i class="bi bi-trophy-fill text-danger"></i>
                        <span>Най-популярен филм:</span>
                        <strong>@Model.Statistics.TopMovie</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
