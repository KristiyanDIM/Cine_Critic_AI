@model IEnumerable<Cine_Critic_AI.Models.Movie>

@{
    ViewData["Title"] = "Филми";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Добави нов филм</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Заглавие</th>
            <th>Година</th>
            <th>Жанр</th>
            <th>Режисьор</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Year</td>
                <td>@movie.Genre</td>
                <td>@movie.Director</td>
                <td>
                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-info btn-sm">Детайли</a> |
                    <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-warning btn-sm">Редактирай</a> |
                    <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger btn-sm">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>
